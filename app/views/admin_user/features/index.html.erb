<section>

  <div class="container">
    <div class="card">
      <div class="card-body">
      <h4 class="card-title">All Features</h4>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Name</th>
                <th>Code</th>
                <th>Unit price</th>
                <th>Max Unit Limit</th>
                <th colspan=3>Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @features.each do |feature| %>
                <tr>
                  <td><%= feature.name %></td>
                  <td><%= feature.code %></td>
                  <td>US$ <%= feature.unit_price %></td>
                  <td><%= feature.max_unit_limit %></td>
                  <td><%= link_to 'Show', admin_feature_path(feature.id), remote: true, class: 'btn btn-info' %></td>
                  <td><%= link_to 'Edit', edit_admin_feature_path(feature), class: 'btn btn-primary'%></td>
                  <td><%= link_to 'Destroy', admin_feature_path(feature.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <br>
        <div class="d-flex justify-content-end mt-10"> <%== pagy_bootstrap_combo_nav_js(@pagy) %> </div>

        <%= link_to 'New Feature', new_admin_feature_path, class: "btn btn-success" %>
  </div>
  </div>
  </div>

<div id='feature-content'></div>
</section>
